#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../_purify-css@1.2.5@purify-css/bin/purifycss" "$@"
  ret=$?
else 
  node  "$basedir/../_purify-css@1.2.5@purify-css/bin/purifycss" "$@"
  ret=$?
fi
exit $ret
